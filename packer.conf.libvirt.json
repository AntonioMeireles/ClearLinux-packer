{
	"variables": {
		"cloud_token": "{{ env `VAGRANT_CLOUD_TOKEN` }}"
	},
	"builders": [
		{
			"type": "qemu",
			"use_default_display": true,
			"headless": false,
			"qemuargs": [
				[
					"-m",
					"2048M"
				], [
					"-smp",
					"2"
				], [
					"-global",
					"virtio-pci.disable-modern=on"
				], [
					"--bios",
					"media/OVMF.fd"
				]
			],
			"iso_url": "media/clear-{{user `version`}}-kvm.img",
			"iso_checksum": "{{user `kvm_checksum`}}",
			"iso_checksum_type": "md5",
			"disk_image": true,
			"boot_wait": "30s",
			"ssh_username": "root",
			"ssh_password": "V@grant!",
			"output_directory": "boxes",
			"ssh_port": 22,
			"ssh_wait_timeout": "5m",
			"vm_name": "{{ user `name` }}",
			"boot_command": [
				"<wait5><wait5>",
				"root<enter><wait>V@grant!<enter><wait>V@grant!<enter><wait>",
				"swupd autoupdate --disable<enter>",
				"mkdir -p /etc/ssh<enter>",
				"echo 'PermitRootLogin yes' > /etc/ssh/sshd_config<enter>",
				"swupd bundle-add openssh-server<enter>",
				"systemctl mask tallow --now<enter>",
				"systemctl enable sshd.socket --now<enter>"
			],
			"shutdown_command": "sudo /usr/bin/poweroff -p",
			"format": "qcow2",
			"accelerator": "hvf",
			"disk_size": 40000,
			"net_device": "virtio-net",
			"disk_interface": "virtio-scsi"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"scripts": [
				"scripts/01_resize_root_volume.sh",
				"scripts/02_add_common_bundles.sh",
				"scripts/96_hooks.sh",
				"scripts/97_hypervisor-specific.sh"
			],
			"pause_before": "5s"
		}, {
			"type": "shell",
			"scripts": [
				"scripts/98_vagrant_setup.sh",
				"scripts/99_trim.sh"
			],
			"pause_before": "5s"
		}
	],
	"post-processors": [
		[
			{
				"type": "vagrant",
				"output": "boxes/{{user `name` }}-{{ user `version`}}.{{ .Provider }}.box",
				"compression_level": 9,
				"vagrantfile_template": "Vagrantfile.template",
				"keep_input_artifact": true
			},
			{
				"type": "vagrant-cloud",
				"box_tag": "{{ user `box_tag`}}",
				"access_token": "{{ user `cloud_token` }}",
				"version": "{{user `version`}}",
				"no_release": true,
				"version_description": "---\n\n#### **release notes** - https://download.clearlinux.org/releases/{{user `version`}}/clear/RELEASENOTES\n\n---\n\nbuilt with **[ClearLinux-packer](https://github.com/AntonioMeireles/ClearLinux-packer)** - **[feedback](https://github.com/AntonioMeireles/ClearLinux-packer/issues)** is welcome!"
			}
		]
	]
}