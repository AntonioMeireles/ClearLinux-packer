{
	"variables": {
		"cloud_token": "{{ env `VAGRANT_CLOUD_TOKEN` }}"
	},
	"builders": [
		{
			"type": "qemu",
			"iso_url": "media/clear-{{user `version`}}-libvirt-factory.img",
			"boot_wait": "20s",
			"ssh_username": "clear",
			"ssh_password": "V@grant!",
			"output_directory": "boxes/tmp",
			"ssh_port": 22,
			"ssh_wait_timeout": "5m",
			"vm_name": "{{ user `name` }}",
			"shutdown_command": "sudo systemctl poweroff",
			"use_default_display": true,
			"headless": false,
			"memory": 2048,
			"cpus": 2,
			"qemuargs": [
				[
					"-bios",
					"media/OVMF.fd"
				]
			],
			"iso_checksum_type": "none",
			"disk_image": true,
			"format": "qcow2",
			"accelerator": "kvm",
			"disk_size": 40960,
			"net_device": "virtio-net",
			"disk_interface": "virtio"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"inline": [
				"sudo timedatectl set-ntp true"
			],
			"pause_before": "5s"
		}, {
			"type": "shell",
			"expect_disconnect": true,
			"start_retry_timeout": "600s",
			"inline": [
				"echo 'rebooting...'",
				"sudo reboot"
			]
		}, {
			"type": "shell",
			"inline": [
				"uname -a; swupd info"
			],
			"pause_before": "5s"
		}
	],
	"post-processors": [
		[
			{
				"type": "vagrant",
				"output": "boxes/{{ .Provider }}/{{user `name` }}-{{ user `version`}}.{{ .Provider }}.box",
				"compression_level": 9,
				"vagrantfile_template": "Vagrantfile.template.rb"
			}
		]
	]
}